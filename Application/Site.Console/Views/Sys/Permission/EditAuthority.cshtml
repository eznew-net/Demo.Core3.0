@{
    ViewBag.Title = "编辑权限";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EZNEW.ViewModel.Sys
@using EZNEW.Module.Sys
@model PermissionViewModel
<div id="page-body">
    <div id="page-body-inner">
        <div class="layui-form">
            @using (Html.AjaxBeginForm("EditAuthority", "Sys", new AjaxFormOptions() { HttpMethod = "Post", OnSuccess = "EZNEW_SuccessCallback", OnFailure = "EZNEW_FailedCallback" }, new { id = "default-form" }))
            {
                @Html.HiddenFor(r => r.Id)
                @Html.HiddenFor(r => r.Group.Id)
                @if (Model.Group != null)
                {
                    <div class="layui-form-item">
                        <label class="layui-form-label">所属分组</label>
                        <div class="layui-input-inline w-200 lh-38">
                            @Model.Group.Name
                        </div>
                    </div>
                }
                <div class="layui-form-item">
                    <label class="layui-form-label">@Html.LabelFor(c => c.Name)</label>
                    <div class="layui-input-inline w-200">
                        @Html.TextBoxFor(a => a.Name, new { @class = "layui-input" })
                    </div>
                    <div class="layui-form-mid form-validate-msg">@Html.DefaultValidationMessageFor(c => c.Name, "", new { @class = "form-validate-msg" })</div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">@Html.LabelFor(c => c.Code)</label>
                    <div class="layui-input-inline w-200">
                        @Html.TextBoxFor(a => a.Code, new { @class = "layui-input" })
                    </div>
                    <div class="layui-form-mid form-validate-msg">@Html.DefaultValidationMessageFor(c => c.Code, "", new { @class = "form-validate-msg" })</div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">@Html.LabelFor(c => c.Status)</label>
                    <div class="layui-input-inline w-200">
                        @Html.EnumToSelect(a => a.Status, PermissionStatus.Enable, new { @class = "custom-select w-200" }, selectedValue: Model?.Status.ToString("d"))
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">@Html.LabelFor(c => c.Remark)</label>
                    <div class="layui-input-inline w-200">
                        @Html.TextAreaFor(a => a.Remark, new { @class = "layui-input", style = "height:50px" })
                    </div>
                    <div class="layui-form-mid form-validate-msg">@Html.DefaultValidationMessageFor(c => c.Remark, "", new { @class = "form-validate-msg" })</div>
                </div>
            }
        </div>
    </div>
</div>

<div id="page-foot" class="hidev">
    <div class="page-foot-btngroup">
        <button type="button" id="btn_submit" class="layui-btn layui-btn-gsuccess"><i class="icon-save"></i> 保存</button>
        <button type="reset" id="btn_reset" class="layui-btn layui-btn-gsecondary"><i class="icon-undo"></i> 重置</button>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        DataObjectTag = "Authority";
        $(function () {
            BindDefaultFormSubmitEnterEvent();
        });
    </script>
}
